<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="radar.radar.ARActivity2">


    <TextureView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/AR2_texture_view"/>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:id="@+id/ARview_layout_for_annotations"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ARview_layout_for_annotations">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ARAnnotation_distance_to_dest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48dp"
                android:text="200m"/>
            <TextView
                android:layout_below="@+id/ARAnnotation_distance_to_dest"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to South Lawn"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
