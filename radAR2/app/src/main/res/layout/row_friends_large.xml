<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/recyclerView_padding_small"
    android:paddingRight="@dimen/recyclerView_padding_small"
    android:paddingTop="@dimen/row_padding"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/row_friends_profile_picture"
        android:layout_width="@dimen/user_profile_img_size"
        android:layout_height="@dimen/user_profile_img_size"
        android:contentDescription="Profile picture"
        android:src="@drawable/img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp">

        <LinearLayout
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/row_friends_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kenneth A."
                    android:textColor="@android:color/black" />

                <!--<TextView-->
                    <!--android:id="@+id/row_friends_username"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text=" krusli"-->
                    <!--android:textColor="@android:color/black" />-->

            </LinearLayout>

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/row_friends_online_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>