<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!--We can add content of the cardview here -->
            <ImageView
                android:id="@+id/searchImageID"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:color/background_dark"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/row_search_name"
                android:layout_toRightOf="@+id/searchImageID"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/row_input_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Kenneth A."
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="10sp"
                android:text="accept"
                android:id="@+id/accept"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/searchImageID"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="10sp"
                android:text="decline"
                android:id="@+id/decline"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/accept"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>