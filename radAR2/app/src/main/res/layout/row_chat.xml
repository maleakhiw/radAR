<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/recyclerView_padding_small"
    android:paddingRight="@dimen/recyclerView_padding_small"
    android:paddingTop="@dimen/row_padding_small"
    android:paddingBottom="@dimen/row_padding_small"

    android:background="@color/colorWhite">

    <!--We can add content of the cardview here -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/row_profile_picture"
        android:layout_width="@dimen/group_img_size"
        android:layout_height="@dimen/group_img_size"
        android:contentDescription="Profile picture"
        android:src="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:id="@+id/row_search_name"
        android:layout_toEndOf="@+id/row_profile_picture"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/row_chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginBottom="2dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/name_font_size" />

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_last_message_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/row_last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
            />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>


