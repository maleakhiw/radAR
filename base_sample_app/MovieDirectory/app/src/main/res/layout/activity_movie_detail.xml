<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gohool.moviedirectory.moviedirectory.MovieDetailActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewDet"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.016"
        android:layout_marginEnd="8dp">

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Content inside -->
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/movieImageIDDets"
                android:background="@android:color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movieTitleIDDets"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/movieImageIDDets"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Movie Title"
                />

            <TextView
                android:text="Release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movieReleaseIDDets"
                android:layout_toRightOf="@id/movieImageIDDets"
                android:layout_below="@id/movieTitleIDDets"
                android:paddingLeft="5dp"
                />

            <TextView
                android:text="Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movieCategoryIDDets"
                android:layout_toRightOf="@id/movieImageIDDets"
                android:layout_below="@id/movieReleaseIDDets"
                android:paddingLeft="5dp"
                />

            <TextView
                android:text="Rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movieRatingIDDets"
                android:layout_toRightOf="@id/movieImageIDDets"
                android:layout_below="@id/movieCategoryIDDets"
                android:paddingLeft="5dp"
                />

            <TextView
                android:text="Runtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movieRuntimeIDDets"
                android:layout_toRightOf="@id/movieImageIDDets"
                android:layout_below="@id/movieRatingIDDets"
                android:paddingLeft="5dp"
                />

            <TextView
                android:text="Directed by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movieDirectedIDDets"
                android:layout_below="@id/movieImageIDDets"
                android:paddingLeft="5dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:padding="5dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewDet"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.027">

        <!--Content-->
        <TextView
            android:id="@+id/movieActorsIDDets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Actors:" />

        <TextView
            android:id="@+id/movieWritersIDDets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movieActorsIDDets"
            android:paddingLeft="5dp"
            android:text="Writers:" />

        <TextView
            android:id="@+id/moviePlotIDDets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movieWritersIDDets"
            android:paddingLeft="5dp"
            android:text="Plot" />

        <TextView
            android:id="@+id/movieBoxOfficeIDDets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moviePlotIDDets"
            android:paddingLeft="5dp"
            android:text="Box Office" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
